<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.CityCardTheme"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SingleLineTextView">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="WeatherAdditionalInfoTitle" parent="SingleLineTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="WeatherAdditionalInfoValue" parent="SingleLineTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SwitchItem">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">@color/switch_item_text_color</item>
        <item name="android:background">@drawable/switch_item_background</item>
    </style>

</resources>
