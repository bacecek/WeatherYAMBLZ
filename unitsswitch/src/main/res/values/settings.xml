<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="switch_width">70dp</dimen>

    <style name="SwitchItem">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">@color/item_text_color</item>
    </style>

    <declare-styleable name="UnitsSwitch">
        <attr name="textTitle" format="string"/>
        <attr name="textLeft" format="string"/>
        <attr name="textRight" format="string"/>
        <attr name="textColorActivated" format="reference"/>
    </declare-styleable>
</resources>